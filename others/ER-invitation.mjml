<mjml version="3.3.3">
  <mj-body background-color="#F2F2F2" color="#55575d" width="650px" font-family="Arial, sans-serif">
    <mj-section css-class="header" background-color="#000" background-repeat="repeat" padding="16px 0" text-align="center" vertical-align="top">
